<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'book' ,user: @user %>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
          <%= f.text_field :title ,class:"form-control book_title", id:"book_title"%>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class:"form-control book_body", id:"book_body" %>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@bookf.id) do %>
                <%= image_tag @bookf.user.get_profile_image(100,100) %>
                <br>
                <%= @bookf.user.name %>
              <% end %>
            </td>
            <td><%=link_to @bookf.title, book_path(@bookf.id) %></td>
            <td><%= @bookf.body %></td>
            <td>
              <%=link_to("Edit", edit_book_path(@bookf.id),{class: "btn btn-sm btn-success edit_#{@bookf.id}"}) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@bookf.id), method: :delete, "data-confirm" => "本当に消しますか？",class: "btn btn-sm btn-danger destroy_#{@bookf.id}"%>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
